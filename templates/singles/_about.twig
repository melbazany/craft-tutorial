{% extends "_layout" %}

{% set profilePhoto = entry.profilePhoto.one() %}
{% set bio = entry.bio %}

{% block content %}

    {% if profilePhoto %}

    <div class="photo">
        {{
            profilePhoto.getImg({
                mode: 'crop',
                width: 360,
                height: 360,
            })
        }}
    </div>

    {% endif %}

    {% if bio %}
    <div class="bio">
        {{ bio }}
    </div>

    {% endif %}

{% endblock %}
